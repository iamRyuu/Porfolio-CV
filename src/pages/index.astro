---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
import Badge from "../components/Badge.astro";
import LinkedInIcon from "../components/icons/LinkedIn.astro";
import GitHubIcon from "../components/icons/GitHub.astro";
import MailIcon from "../components/icons/Mail.astro";
import SocialPill from "../components/SocialPill.astro";
---

<Layout 
title="Portafolio de Ryuu"
description="Hola! y bienvenido a mi portafolio digital, soy Jorge, programado y desarrollador web."

>
  <main>
    <section class="w-full lg:w-[740px] mx-auto py-44">
      <img
        class="rounded-full w-12 h-12 mb-4"
        src="https://media.licdn.com/dms/image/D4E03AQHfussPUdRG1g/profile-displayphoto-shrink_800_800/0/1681440861826?e=1718236800&v=beta&t=8hMqEnIlTTDOMWK0D_e40l-XKPJjuzLYebOx-1ltAJk"
        alt="jorge photo"
      />

      <h1 class="text-white text-5xl font-bold flex flex-row gap-x-4 pb-10">
        Hola, Soy Jorge! <a
          href="https://www.linkedin.com/in/jorgeobando1610/"
          target="_blank"
          rel="no"
          class="flex justify-center items-center"
          ><Badge>Disponible para trabajos</Badge></a
        >
      </h1>
      <h2 class="text-2xl opacity-80 text-wrap">
        <span class="text-yellow-200/90"
          >Desarrollador web, estudiante de Ingeniería de Sistemas.</span
        >
        Me especializo en la creación de sitios web con diferentes tecnologías que
        se acomodan a los diferentes retos.
      </h2>

      <nav class="flex gap-x-4 mt-6">
        <SocialPill href="https://www.linkedin.com/in/jorgeobando1610/">
          <LinkedInIcon class="w-6 h-6" />LinkedIn
        </SocialPill>
        <SocialPill href="https://github.com/iamRyuu">
          <GitHubIcon class="w-6 h-6" />GitHub
        </SocialPill>
        <SocialPill href="https://github.com/iamRyuu">
          <MailIcon class="w-6 h-6" />jorge.obnd@gmail.com
        </SocialPill>
      </nav>
    </section>
  </main>
</Layout>
